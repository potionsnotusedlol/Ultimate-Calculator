<Window
	x:Class="Home_Assistant_XAML.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:Home_Assistant_XAML"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1920">
        <TextBlock Text="Number:"	HorizontalAlignment="Center"	FontSize="16" />
        
        <StackPanel Orientation="Horizontal"    HorizontalAlignment="Center"    VerticalAlignment="Center">
            <TextBox x:ConnectionId='7' x:Name="firstNumberField"	HorizontalAlignment="Center"	/>
            <TextBox x:ConnectionId='8' x:Name="secondNumberField"	HorizontalAlignment="Center"	/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"    HorizontalAlignment="Center"    VerticalAlignment="Center">
            <Button x:ConnectionId='3' Content="+" Margin="2.5 ,10"    HorizontalAlignment="Center"    FontSize="18"                />
            <Button x:ConnectionId='4' Content="-" Margin="2.5, 10"    HorizontalAlignment="Center"    FontSize="18"                        />
            <Button x:ConnectionId='5' Content="×" Margin="2.5, 10"    HorizontalAlignment="Center"    FontSize="18"                        />
            <Button x:ConnectionId='6' Content="÷" Margin="2.5, 10"    HorizontalAlignment="Center"    FontSize="18"                    />
        </StackPanel>

        <TextBlock x:ConnectionId='2' x:Name="resultField" Margin="20" HorizontalAlignment="Center"    VerticalAlignment="Center"  FontSize="40"   />
    </StackPanel>
</Window>

